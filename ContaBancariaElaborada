class ContaBancaria:
    def __init__(self, titular, senha, saldo=0):
        self.titular = titular
        self.__senha = senha # senha privada (não pode acessar diretamente)
        self.saldo = saldo

    def verificar_senha(self, senha):
        return self.__senha == senha

    def depositar(self, valor):
        self.saldo += valor
        print(f"Depósito de R${valor} realizado. Saldo atual: R${self.saldo}")

    def sacar(self, valor):
        if self.saldo >= valor:
            self.saldo -= valor
            print(f"Saque de R${valor} realizado. Saldo atual: R${self.saldo}")
        else:
            print("Saldo insuficiente!")

conta = ContaBancaria("Paulo", "1234", 100)

usuario = input("Digite o nome do titular: ")
senha = input("Digite sua senha: ")

if usuario == conta.titular and conta.verificar_senha(senha):
    print("\n Login bem-sucedido!\n")

    while True:
        print("\n1 - Depositar")
        print("2 - Sacar")
        print("3 - Sair")
        opcao = input("Escolha uma opção: ")

        if opcao == "1":
            valor = float(input("Digite o valor do depósito: "))
            conta.depositar(valor)

        elif opcao == "2":
            valor = float(input("Digite o valor do saque: "))
            conta.sacar(valor)

        elif opcao == "3":
            print("Saindo sistema...")
            break

        else:
            print("Opção inválida!")
